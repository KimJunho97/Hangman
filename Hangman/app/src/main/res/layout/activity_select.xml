<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity"
    android:background="@drawable/selection"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="Field Selection"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinnerField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/textField"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Level Selection"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerField"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinnerLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/textLevel"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:background="#80898686"
        android:gravity="center"
        android:padding="7dip"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:text="Game Start"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLevel" />


</androidx.constraintlayout.widget.ConstraintLayout>