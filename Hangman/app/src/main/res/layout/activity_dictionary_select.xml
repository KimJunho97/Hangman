<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".DictionarySelectActivity">

    <ImageButton
        android:id="@+id/primaryBtn"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#00ff0000"
        android:src="@drawable/dictionary1" />

    <ImageButton
        android:id="@+id/secondaryBtn"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="#00ff0000"
        android:layout_below="@+id/primaryBtn"
        android:src="@drawable/dictionary2"/>

    <ImageButton
        android:id="@+id/higherBtn"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="#00ff0000"
        android:layout_below="@+id/secondaryBtn"
        android:src="@drawable/dictionary3"/>

</RelativeLayout>