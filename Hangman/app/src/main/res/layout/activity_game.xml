<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000">

        <ImageView
            android:id="@+id/hangmanImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/hangman0"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:padding="10px">

            <TextView
                android:id="@+id/fieldlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="280dp"
                android:layout_marginRight="10dp"
                android:textColor="#ffffff"
                android:gravity="right"
                android:text="난이도 :\n레벨 :"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W _ _ D"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/characterEditText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:textColor="#ffffff"
                android:hint=" Enter character"
                android:textColorHint="#ffffff"
                android:inputType="textPersonName"
                android:layout_marginStart="30dp"
                android:layout_marginTop="550dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/character_edittext"/>

            <Button
                android:id="@+id/guessButton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Guess"
                android:layout_toRightOf="@+id/characterEditText"
                android:layout_marginTop="550dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/leftGuessesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left Guesses :"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="500dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="32dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/usedCharactersTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used Characters :"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="520dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="32dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/leftGuessesTextView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="158dp"
                android:layout_marginTop="498dp"
                android:layout_marginBottom="0dp"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usedCharactersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A, B, C, D, E, F, G, H, I, J"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginTop="520dp"
                android:layout_marginLeft="160dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>